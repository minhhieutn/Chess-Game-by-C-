<Window x:Class="WpfApp1.MainMenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Chess" Width="600" SizeToContent="Height"
        Icon="Asset/icon.ico"
        WindowStartupLocation="CenterScreen"
        Background="Black">
    <Grid x:Name="BoardGrid"
          Height="600" 
          Width="600">
        <Grid.Background>
            <ImageBrush ImageSource="/Asset/Background.png"/>
        </Grid.Background>
        <StackPanel VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0,0,0,100">
            <Button x:Name="StartButton"
                    Content="Start Game"
                    Background="Gray" Foreground="LightGreen" FontWeight="Bold"
                    Width="200"
                    Height="50"
                    FontSize="30"
                    Margin="0,0,0,20"
                    Click="StartButton_Click"/>

            <Button x:Name="QuitButton"
                    Content="Quit"
                    Background="Gray" Foreground="LightGreen" FontWeight="Bold"
                    Width="200"
                    Height="50"
                    FontSize="30"
                    Click="Quit_Click"/>
        </StackPanel>
    </Grid>
</Window>
